<% include partials/header %>
<!-- <link href="stylesheets/inbox.css" rel="stylesheet" type="text/css"> -->
    <script>
        var socket = io();
        $("#inbox").addClass("active");
        $("#title").text("Indbakke");

        // Send a message
        function sendMessage(userId){
            var chatBox = $("#message");
            var message = chatBox.val();
            chatBox.val("");

            $("#messageDiv").append("<p class='text-right'>" + message + "</p>")


            socket.emit("from user to server", {
                message: message,
                userId: userId
            });
        }

        socket.on("from server to user", (data) => {
            console.log("apwoidjaowdijoawdija" + data);
            $("#messageDiv").append("<p>" + data.message + "</p>");
        });
        
    </script>

    <button onclick="messageFromMikael('<%= user._id %>')"> Besked fra Mikael</button>

    <!-- Messages -->
    <div class="container">
        <div id="messageDiv">
        <% user.messages.forEach((message) => { %>
            <% if(message.fromUser === true) { %>
                <p class="text-right"> <%= message.message %> </p>
                <% } else { %>
                    <p> <%= message.message %> </p>                    
                <% } %>
            <% }) %>
        </div>
    </div>



    <!-- tekstfelt & send-knap -->
    <div>
        <div class="d-flex flex-column justify-content-end" style="min-height: calc(100vh - 55px); align-items: flex-end;">
            <div class="input-group stickyBottom">
                <input id="message" class="form-control" type="text" placeholder="skriv en besked...">
                <button class="btn btn-primary" onclick="sendMessage('<%= user._id %>')"><i class="fa fa-telegram fa-lg"></i></button>
            </div> 
        </div>
    </div>


<% include partials/footer %>