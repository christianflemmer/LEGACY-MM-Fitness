<div class="container">
    <h4>Registrér ny bruger</h4>
    <form action="register" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Fornavn</label>
                <input type="text" class="form-control" name="firstName" placeholder="fornavn">
            </div>
            <div class="form-group col-md-6">
                <label>Efternavn</label>
                <input type="text" class="form-control" name="lastName" placeholder="efternavn">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Email</label>
                <input type="email" class="form-control" name="username" placeholder="e-mail">
            </div>
            <div class="form-group col-md-6">
                <label>Password</label>
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" disabled>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>City</label>
                <input type="text" class="form-control" id="inputCity" disabled>
            </div>
            <div class="form-group col-md-2">
                <label>Zip</label>
                <input type="text" class="form-control" id="inputZip" disabled>
            </div>
        </div>
        <button class="btn btn-outline-primary">Registrér</button>
    </form> 
</div>

