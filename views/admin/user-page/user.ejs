<% include ../partials/header %>

<style>
    .vertical-line {
        border-right: 1px solid rgba(200,200,200, .7);
    }

    .pointer{
        cursor: pointer;
    }
</style>

<script src="/js/user.js"></script>

<script>
    function deleteUser(userId, userName) {
    if (confirm('Er du sikker på du vil slette ' + userName)) {
        $.ajax({
            type: 'POST',
            url: '/admin/delete/' + userId,
            success: function(respones) {
                window.location.replace("/admin");
            }
        });
    } else {
        // Gør ingenting
    }
}

</script>

<div class="container">
    <button class="btn btn-sm btn-outline-danger float-right" onclick="deleteUser('<%=user._id%>' , '<%= user.firstName %>')"> Slet bruger</button>
    <div class="row">
        <div class="col-9">
            <div class="row">
                <div class="col-2">
                    <p><strong>Navn:</strong></p>
                    <p><strong>Adresse:</strong></p>
                    <p><strong>E-mail:</strong></p>
                    <p><strong>Telefon:</strong></p>                    
                </div>
                <div class="col-5">
                    <p><%= user.firstName + " " + user.lastName %></p>
                    <p><%= user.street + " " + user.houseNumber %> , <%= user.zipcode + " " + user.town %></p>
                    <p><%= user.username %></p>
                    <p><%= user.phone %></p>                    
                </div>
            </div>
        </div>
        <div class="col-3">
            <img src="<%= user.avatarURL %>" width="200">
        </div>
    </div>
    
    <a href="<%= user._id %>/chat" class="btn btn-outline-success">Chat med bruger </a>

    <% include user-weight %>

    <% include user-training %>

    <% include user-meal-plan %>

</div>

<% include ../partials/footer %>