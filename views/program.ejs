<% include partials/header %>
<% let trainingStats = user.trainingStats; %>

<script>
    $("#program").addClass("active");
    $("#title").text("Program");
</script>

<h4 class="ml-4 my-2">Mit trænings program</h4>

<% trainingStats.trainingPases.forEach((trainingPas) => { %>
    <div class="card m-1 my-4">
        <div class="card-header text-white bg-dark">
            <% if(today === trainingPas.day) {   %>
                <h5> I dag - Pas <%= trainingPas.pasNumber %> </h5>
            <% } else if(today !== trainingPas.day) { %>
                <h5> <%= trainingPas.day %> - Pas <%= trainingPas.pasNumber %> </h5>
            <% } %>
        </div>
    
        <div class="card-body pt-0 bg-light">
        <% trainingPas.muscleGroups.forEach((muscleGroup) => { %>
            <h5 class="mt-4 text-capitalize"> <%= muscleGroup.name %> </h5>
            <div class="list-group list-unstyled" style="position: relative;">
                <% muscleGroup.assignedWorkouts.forEach((workout) => { %>
                    <a href="/workout/<%= workout.name %>" target="_blank" class="btn btn-sm btn-primary mt-1"> 
                        <span class="float-left text-capitalize"> <%= workout.name %> </span> 
                        <span class="float-right"> <%= workout.sæt %> sæt af <%= workout.reps %> gentagelser </span>
                    </a>
                <% }) %>
            </div>
        <% }) %>
        </div>        
    </div>
<% }) %>

<% include partials/footer %>